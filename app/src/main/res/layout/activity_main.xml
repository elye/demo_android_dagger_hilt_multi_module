<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature Activity"
        app:layout_constraintBottom_toTopOf="@id/my_button_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/my_button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature Two Activity"
        app:layout_constraintBottom_toTopOf="@id/my_inverse_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_button" />

    <Button
        android:id="@+id/my_inverse_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature Inverse Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_button_two" />
</androidx.constraintlayout.widget.ConstraintLayout>